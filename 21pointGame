//This is the shuffling funtion for 21point game.

public static int[] shuffling(int cards []){ //ramdon the cards
 int PrepareNum = 0;
 boolean flag = true;
   for(int i  = 0; i < cards.length; i++)
  {
    do{
             PrepareNum = (int)(Math.random()*52)+1;
             flag = checkCardRepected(cards,PrepareNum);
          }while (flag == false);
    cards[i] = PrepareNum;
  }
  return cards;
}
public  static boolean checkCardRepected(int cards [],int PrepareNum){ //check is the any cards repected.
    boolean a = true;
	lab1:
	for(int i = 0;i<cards.length;i++)
    {
       if(PrepareNum == cards[i])
	   {
		  a = false;
		  break lab1;
       }
    }
    return a;
}
